{
  "name": "cius-web-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "NODE_OPTIONS='--experimental-require-module' prisma generate && next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "postinstall": "NODE_OPTIONS='--experimental-require-module' prisma generate",
    "prisma:generate": "NODE_OPTIONS='--experimental-require-module' prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prepare": "husky install",
    "clean": "./scripts/project-cleanup.sh",
    "clean:quick": "./scripts/quick-cleanup.sh",
    "clean:all": "rm -rf .next out dist build .turbo .cache .vercel coverage node_modules && pnpm install",
    "prebuild": "rm -rf .next",
    "docs": "./scripts/show-cleanup-cheatsheet.sh",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@geist-ui/react-icons": "^1.0.1",
    "@prisma/adapter-pg": "^7.2.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@tsparticles/engine": "^3.9.1",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.9.1",
    "@upstash/redis": "^1.36.0",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.8.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.24.7",
    "geist": "^1.5.1",
    "lenis": "^1.3.17",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.70.0",
    "resend": "^6.6.0",
    "three": "^0.182.0",
    "zod": "^4.3.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@prisma/client": "^7.2.0",
    "@storybook/addon-essentials": "8.6.15",
    "@storybook/addon-onboarding": "8.6.15",
    "@storybook/blocks": "8.6.15",
    "@storybook/react": "8.6.15",
    "@storybook/react-vite": "8",
    "@storybook/test": "^8.6.15",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.182.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.5.9",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "storybook": "8.6.15",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vitest-mock-extended": "^3.1.0"
  },
  "pnpm": {
    "overrides": {
      "@prisma/dev": "0.19.1"
    }
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
