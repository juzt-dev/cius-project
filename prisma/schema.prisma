// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String   @db.Text
  createdAt DateTime @default(now())
  
  @@index([createdAt])
  @@index([email])
}

model Career {
  id        String   @id @default(cuid())
  name      String
  email     String
  position  String
  message   String?  @db.Text
  createdAt DateTime @default(now())
  
  @@index([createdAt])
  @@index([email])
}

model ReportDownload {
  id           String   @id @default(cuid())
  email        String
  downloadedAt DateTime @default(now())

  @@index([downloadedAt])
  @@index([email])
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  role         String   @default("user")
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
  @@index([role])
}
